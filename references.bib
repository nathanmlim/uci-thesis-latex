@article{kodani_2014_2015,
	title = {The 2014 {Bernard} {B}. {Brodie} {Award} {Lecture}—{Epoxide} {Hydrolases}: {Drug} {Metabolism} to {Therapeutics} for {Chronic} {Pain}},
